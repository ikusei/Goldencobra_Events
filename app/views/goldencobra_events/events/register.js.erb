<% if @registered_event_price_group %>
	parent = $('li.article_event_id_<%= @registered_event_price_group.id%>');
	parent.addClass("completed");
	parent.find("ul.sub_events").addClass("active").slideDown();
	$('div#register_for_event_<%= @registered_event_price_group.event_id %>').html("Anmeldung vorgemerkt");
	$(".article_event_id_<%= @registered_event_price_group.event_id %>").children(".article_event_content").children(".pricegroups").hide();
<% else %>
	<% if @event_to_register %>
		$('div#register_for_event_<%= @event_to_register.id %>')
			.closest(".article_event_content")
			.children(".pricegroups")
			.html("<%= escape_javascript(render(:partial => '/goldencobra_events/events/register' ))%>")
			.fadeIn();
	<% end %>
<% end %>

<% if session[:goldencobra_event_registration].present? && session[:goldencobra_event_registration][:pricegroup_ids].present? %>
	$('#goldencobra_events_enter_account_data_wrapper').fadeIn();
<% end %>

