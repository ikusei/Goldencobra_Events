<%= form_tag "/goldencobra_events/events/registration", :remote => true, :class=>"user_registration", :id => "goldencobra_events_user_registration_form" do %>
	<div id="registration_summary">
	  <h3>Zusammenfassung Anmeldung</h3>
	  <div class="anschrift">
		  <h4>Rechnungsanschrift</h4>
		  <% @user = User.find(session[:goldencobra_event_registration][:user_id]) if session[:goldencobra_event_registration][:user_id] && session[:goldencobra_event_registration][:user_id].present? %>
			<% if @user %>
			  <p><%= @user.title if @user.title.present? %> <%= @user.firstname %> <%= @user.lastname %></p>
				<% if @user.company && @user.company.title.present? %>
				  <p><%= @user.company.title %></p>
				  <p><%= @user.company.location.street %></p>
				  <p><%= @user.company.location.zip %> <%= @user.company.location.city %></p>
				<% end %>
			<% end %>
	  </div>
	  <div class="gebuehren">
		  <h4>Teilnahmegeb&uuml;hr</h4>
			<% if session[:goldencobra_event_registration].present? %>
				<% erg = session[:goldencobra_event_registration] %>
				<% event_pg = GoldencobraEvents::EventPricegroup.find(session[:goldencobra_event_registration][:pricegroup_ids].first) %>
				<p>Preis netto: <%= number_to_currency(event_pg.price, :locale => :de) %></p>
				<p>zzgl MwSt: <%= number_to_currency(event_pg.price/100*19, :locale => :de) %></p>
				<p>Preis brutto: <%= number_to_currency(event_pg.price + (event_pg.price/100*19), :locale => :de) %></p>
			<% end %>
	  </div>
		<p><%= link_to "Aendern", "/anmeldung", class: "button" %>&nbsp;	<%= submit_tag "Verbindlich anmelden" %></p>
	</div>
<% end %>
